        }

        canvas {
            /* border: 1px solid black; */
            /* background-color: white; */
        }
        table {
    border-collapse: collapse;
    width: auto;
    background-color: #f9f9f9;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    width: 1000px;
